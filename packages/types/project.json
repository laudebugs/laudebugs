{
	"name": "types",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/types/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/vite:build",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/packages/types",
				"assets": [
					{
						"glob": "**/*",
						"input": "packages/types/Changelog.md",
						"output": "Changelog.md"
					},
					{
						"glob": "**/*",
						"input": "packages/types/README.md",
						"output": "README.md"
					}
				]
			}
		},
		"publish": {
			"command": "node tools/scripts/publish.mjs types {args.ver} {args.tag}",
			"dependsOn": ["build"]
		},
		"test": {
			"executor": "@nx/vite:test",
			"outputs": ["{workspaceRoot}/coverage/packages/types"],
			"options": {
				"passWithNoTests": true,
				"reportsDirectory": "../../coverage/packages/types"
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["packages/types/**/*.ts"]
			}
		},
		"version": {
			"executor": "@jscutlery/semver:version",
			"options": {
				"preset": {
					"commitParserOptions": {
						"headerPattern": "^([A-Z]{3,}-\\d{1,5}):? (chore|build|ci|docs|feat|fix|perf|refactor|test)(?:\\(([\\w-]+)\\))?\\S* (.+)$",
						"headerCorrespondence": ["ticketReference", "type", "scope", "subject"]
					  },
					"types": [
						{ "type": "feat", "section": "‚ú® Features" },
						{ "type": "fix", "section": "üêû Bug Fixes" },
						{ "type": "chore", "section": "‚öôÔ∏è Chores" },
						{ "type": "build", "section": "üõ†Ô∏è Build System" },
						{ "type": "ci", "section": "ü§ñ Continuous Integration" },
						{ "type": "docs", "section": "üìÑ Documentation" },
						{ "type": "style", "section": "üé® Styles" },
						{ "type": "refactor", "section": "üßπ Code Refactoring" },
						{ "type": "perf", "section": "‚ö°Ô∏è Performance Improvements" },
						{ "type": "test", "section": "‚úÖ Tests" }
					  ]
				}
			}
		}
	},
	"tags": []
}
