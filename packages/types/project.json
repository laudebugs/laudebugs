{
  "name": "types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/types/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/types",
		"assets": [
		  {
			"glob": "**/*",
			"input": "packages/types/Changelog.md",
			"output": "Changelog.md"
		  },
		  {
			"glob": "**/*",
			"input": "packages/types/README.md",
			"output": "README.md"
		  }
		]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs types {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/types"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/types"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/types/**/*.ts"]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular"
      }
    }
  },
  "tags": []
}
